<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.LDM_Guia5_HC98I04001.CalculadoraActivity">

    <TextView
        android:id="@+id/txtEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/btnPI"
        android:textAlignment="textEnd"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSalida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="25dp"
        android:text="@string/txtPI"
        android:textAlignment="textEnd"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn9" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnDiv"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnDEL"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnINV"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnINV"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn6" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnMult"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnParentesisIzq"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnsin"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnINV"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btn3" />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnMenos"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnParentesisDer"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnln"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnINV"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/btnParentIzq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnParentesisPunto"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnParentDerecho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btn0"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btn00"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/press_buttonnumeros"
                android:text="@string/btnMas" />

            <Button
                android:id="@+id/btnMult5"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnIgual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMult9"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/press_buttonsignos"
                android:text="@string/btnPI"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>